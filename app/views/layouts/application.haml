!!! 5

%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %title ScoreKeeper
    - is_game_play_show = %w[game_plays show] == [controller.controller_name, controller.action_name]
    = stylesheet_link_tag 'scaffold' unless is_game_play_show
    = stylesheet_link_tag 'screen', :media => 'screen' if is_game_play_show
    = stylesheet_link_tag 'jquery.autocomplete', :media => 'screen'
    = csrf_meta_tag

  %body
    = yield

    = javascript_include_tag 'jquery.min', 'jquery.easing.1.3', 'jquery.autocomplete.pack'
    = javascript_include_tag 'underscore-min', 'json2', 'coffee-script', 'backbone-min'
    = javascript_include_tag 'rails', 'application'
