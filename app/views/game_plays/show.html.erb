<section id="header">
  <header class="container_16">
    <h1>
      <%= @game.name %><%= link_to 'i', [:edit, @game], :class => 'button info-button' %>
    </h1>
    <%= link_to 'configure', [:edit, @game_play], :class => 'button right' %>
  </header>
</section>

<section id="main">
  <section class="container_16">
    <section id="messages">
      <p id="notice"><%= notice %></p>
    </section>

    <section id="players" class="clearfix" data-sort-order="<%= @game.scoring_strategy_as_sql_order %>">
      <% @game_players.each_with_index do |game_player, index| %>
        <article id="<%= dom_id(game_player) %>" class="grid_<%= index.zero? ? '4' : '3' %>">
          <div class="inner clearfix">
            <section class="player-avatar-medium">
              <%= avatar_image_tag game_player.player, 138 %>
            </section>
            <section class="player-avatar-large">
              <%= avatar_image_tag game_player.player, 198 %>
            </section>
            <section class="player-name"><%= game_player.player.name %></section>
            <section class="score"><%= game_player.score || 0 %></section>
            <section class="update-score">
              <%= form_for game_player, :remote => true do |f| %>
                <%= f.text_field :add_to_score %>
                <%= f.submit '+ to score' %>
              <% end %>
            </section>
          </div>
        </article>
      <% end %>
    </section>
  </section>
</section>

<footer id="footer">
  <section class="container_16">
    <h3>Letâ€™s Play!</h3>
  </section>
</footer>
