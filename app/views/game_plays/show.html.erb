<p id="notice"><%= notice %></p>

<h2><%= @game.name %></h2>

<section id="players">
  <% @game_players.each do |game_player| %>
    <article id="<%= dom_id(game_player) %>">
      <section class="player-avatar"><%= image_tag avatar_url(game_player.player, 48) %></section>
      <section class="player-name"><%= game_player.player.name %></section>
      <section class="score"><%= game_player.score || 0 %></section>
      <section class="update-score">
        <%= form_for game_player, :remote => true do |f| %>
          <%= f.text_field :add_to_score %>
          <%= f.submit '+ to score' %>
        <% end %>
      </section>
    </article>
  <% end %>
</section>

<%= link_to 'Edit', [:edit, @game_play] %> |
<%= link_to 'Back', :game_plays %>
